generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id                Int        @id @default(autoincrement())
  first_name        String
  last_name         String
  username          String     @unique
  password          String
  profile           Profile?
  sentMessages      Message[]  @relation("SentMessages")
  recievedMessages  Message[]  @relation("RecievedMessages")
}
model Profile{
  id          Int    @id @default(autoincrement())
  bio         String? 
  pictureURL  String?  
  user        User   @relation(fields: [userId], references: [id])
  userId      Int    @unique  
}
model Message{
  text        String
  createdAt   DateTime @default(now())
  author      User     @relation("SentMessages", fields: [authorId], references: [id])
  authorId    Int
  reciever    User     @relation("RecievedMessages", fields: [recieverId], references: [id])
  recieverId  Int      @unique

}
